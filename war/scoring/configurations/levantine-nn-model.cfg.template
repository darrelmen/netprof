[decode.HybridAlign]
grammar: MODELS_DIR/grammar.align
trace-flags: 3
dictionary: MODELS_DIR/HLDA_DIR/dict-wo-sp
opt-sil: OPT_SIL

[pron.NNScore]
phone-index: MODELS_DIR/label-map
