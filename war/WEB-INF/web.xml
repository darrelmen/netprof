<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>LangTest.html</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>forceNocacheFilter</filter-name>
        <filter-class>mitll.langtest.server.filter.ForceNocacheFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>forceNocacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ==================================================================== -->
    <!-- Start RPC mappings                                                   -->
    <!-- ==================================================================== -->

    <servlet>
        <servlet-name>databaseServlet</servlet-name>
        <servlet-class>mitll.langtest.server.LangTestDatabaseImpl</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>databaseServlet</servlet-name>
        <url-pattern>/langtest/langtestdatabase</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userService</servlet-name>
        <servlet-class>mitll.langtest.server.services.UserServiceImpl</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>userService</servlet-name>
        <url-pattern>/langtest/user-manager</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>monitoringService</servlet-name>
        <servlet-class>mitll.langtest.server.services.MonitoringServiceImpl</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>monitoringService</servlet-name>
        <url-pattern>/langtest/monitoring-manager</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>analysisService</servlet-name>
        <servlet-class>mitll.langtest.server.services.AnalysisServiceImpl</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>analysisService</servlet-name>
        <url-pattern>/langtest/analysis-manager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listService</servlet-name>
        <servlet-class>mitll.langtest.server.services.ListServiceImpl</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>listService</servlet-name>
        <url-pattern>/langtest/list-manager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>resultService</servlet-name>
        <servlet-class>mitll.langtest.server.services.ResultServiceImpl</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>resultService</servlet-name>
        <url-pattern>/langtest/result-manager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>exerciseService</servlet-name>
        <servlet-class>mitll.langtest.server.services.ExerciseServiceImpl</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>exerciseService</servlet-name>
        <url-pattern>/langtest/exercise-manager</url-pattern>
    </servlet-mapping>

    <!-- ==================================================================== -->
    <!-- End RPC mappings                                                     -->
    <!-- ==================================================================== -->

    <servlet>
        <servlet-name>downloadServlet</servlet-name>
        <servlet-class>mitll.langtest.server.DownloadServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>scoreServlet</servlet-name>
        <servlet-class>mitll.langtest.server.ScoreServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadUsers/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadResults/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadEvents/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadAudio/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>scoreServlet</servlet-name>
        <url-pattern>/scoreServlet/*</url-pattern>
    </servlet-mapping>

<!--    <servlet>
        <servlet-name>loadTestServlet</servlet-name>
        <servlet-class>mitll.langtest.server.load.LoadTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loadTestServlet</servlet-name>
        <url-pattern>/loadTest/*</url-pattern>
    </servlet-mapping>-->

    <context-param>
        <param-name>config</param-name>
        <param-value>netProf</param-value>
    </context-param>

    <context-param>
        <param-name>configFile</param-name>
        <param-value>config.properties</param-value>
    </context-param>
</web-app>
