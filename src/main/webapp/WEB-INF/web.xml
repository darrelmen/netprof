    <!-- ==================================================================== -->
    <!-- End RPC mappings                                                     -->
    <!-- ==================================================================== -->

    <servlet>
        <servlet-name>downloadServlet</servlet-name>
        <servlet-class>mitll.langtest.server.DownloadServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>scoreServlet</servlet-name>
        <servlet-class>mitll.langtest.server.ScoreServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadUsers/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadResults/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadEvents/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadAudio/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/downloadAudio/h2/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>scoreServlet</servlet-name>
        <url-pattern>/scoreServlet/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>scoreServlet</servlet-name>
        <url-pattern>/scoreServlet/h2/*</url-pattern>
    </servlet-mapping>

    <!-- ==================================================================== -->
    <!-- START filters	                                                    -->
    <!-- ==================================================================== -->

    <filter>
        <filter-name>forceNocacheFilter</filter-name>
        <filter-class>mitll.langtest.server.filter.ForceNocacheFilter</filter-class>
    </filter>

    <filter>
        <filter-name>attSecurityFilter</filter-name>
        <filter-class>mitll.langtest.server.database.security.AttachSecurityFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>forceNocacheFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>attSecurityFilter</filter-name>
        <url-pattern>/bestAudio/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>attSecurityFilter</filter-name>
        <url-pattern>/answers/*</url-pattern>
    </filter-mapping>

    <!-- ==================================================================== -->
    <!-- END filters  														-->
    <!-- ==================================================================== -->

    <!-- initialize core data services - Mongo connection pool, etc -->
    <listener>
        <listener-class>mitll.hlt.domino.server.configuration.DominoServerInitializationManager</listener-class>
    </listener>
</web-app>
